@model IEnumerable<Spengergasse.WebApplication.Models.lehrer>

@{
    ViewBag.Title = "Lehrer";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.L_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.L_Vorname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.L_Gebdat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.L_Gehalt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.L_L_Chef)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.L_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.L_Vorname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.L_Gebdat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.L_Gehalt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lehrer2.L_Name)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id = item.L_ID }) |
          @Html.ActionLink("Details", "Details", new { id = item.L_ID }) |
          @Html.ActionLink("Delete", "Delete", new { id = item.L_ID }) |
          @if (item.stundens.Count != 0) {
            @Html.ActionLink("Stunden", "Index", "Stundens", new { lehrer = item.L_ID }, null)
          } else {
            <span>Stunden</span>
          }
        </td>
        @* missing: stunden des lehrers *@
    </tr>
}

</table>
