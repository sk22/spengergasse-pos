@model IEnumerable<Spengergasse.MusicMetaWebApp.Models.Artist>

<p>
  @Html.ActionLink("Create New", "Create", "Artists")
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Biography)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Origin)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.EstablishDate)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.DissolveDate)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Active)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model) {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Biography)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Origin)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.EstablishDate)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.DissolveDate)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Active)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", "Artists", new { id = item.Id }, null) |
        @Html.ActionLink("Details", "Details", "Artists", new { id = item.Id }, null) |
        @Html.ActionLink("Delete", "Delete", "Artists", new { id = item.Id }, null)
      </td>
    </tr>
  }

</table>
