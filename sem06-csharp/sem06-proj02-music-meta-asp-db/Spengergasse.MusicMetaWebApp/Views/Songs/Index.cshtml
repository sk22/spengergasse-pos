@model IEnumerable<Spengergasse.MusicMetaWebApp.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <tr>
    <th>
      @Html.ActionLink(
           "Title", "Index",
           new { order = ViewBag.SortByTitle, currentFilter = ViewBag.CurrentFilter }
         )
    </th>
    <th>
      @Html.ActionLink(
            "Genre", "Index",
            new { order = ViewBag.SortByGenre, currentFilter = ViewBag.CurrentFilter }
          )
    </th>
    <th>
      @Html.ActionLink(
           "Album", "Index",
           new { order = ViewBag.SortByAlbum, currentFilter = ViewBag.CurrentFilter }
         )
    </th>
    <th>
      @Html.ActionLink(
           "Artist", "Index",
           new { order = ViewBag.SortByArtist, currentFilter = ViewBag.CurrentFilter }
         )
    </th>
    <th>
      @Html.DisplayNameFor(model => model.DiscNo)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.TrackNo)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ReleaseDate)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Comment)
    </th>
    <th></th>
  </tr>

@foreach (var item in Model) {
  <tr>
    <td>
      @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Album.Name)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Artist.Name)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.DiscNo)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.TrackNo)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Comment)
    </td>
    <td>
      @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
      @Html.ActionLink("Details", "Details", new { id = item.Id }) |
      @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
  </tr>
}

</table>
